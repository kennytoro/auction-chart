pipeline {
    agent any

    stages {
        stage('Initialize Helm') {
            steps {
                sh 'helm version'
                sh 'ls'
            }
        }

        stage('Lint Helm Chart To Confirm') {
            steps {
                sh 'helm lint ./auctionapp --values ./auctionapp/values.yaml'
            }
        }

        stage('Deploy Application') {
            steps {
                sh '''
                helm upgrade --install \
                toro-auctionapp auction-chart/auctionapp \
                --values ./auctionapp/values.yaml
                '''
            }
        }

        stage('Verify Deployment and Helm list') {
            steps {
                sh 'helm ls'
                sh 'kubectl get pods'
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful!, Nice Job!!'
        }
        failure {
            echo 'Oooops Failed!. Check What is wrong'
        }
    }
}
